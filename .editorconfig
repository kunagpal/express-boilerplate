# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Trailing blank lines
[*]
tab_width = 4
charset = utf-8
indent_size = tab
indent_style = tab
max_line_length = 120
insert_final_newline = false
trim_trailing_whitespace = true

# package.json specific settings
[*{json, yml}]
indent_size = 2
indent_style = space
